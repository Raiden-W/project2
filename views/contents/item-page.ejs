<div>
    <div id="item-page-img-container">
        <% item.imgUrl.forEach(url => { %>
            <img class="item-page-img" src="<%- url %>" width="200px" alt="<%- item.name %> image">
        <% }) %>      
    </div>
    <h4 id="item-page-name"><%- item.name %></h4>
    <p id="item-long-info"><%- item.longInfo %></p>
    <% if(!!item.createdBy) { %>
        <p>Item added by
            <a href="/profile/<%- item.createdBy._id %>">
                <%- item.createdBy.username %>
            </a>
        </p>
    <% } %>
    <div>
        <p>Collected by <%- item.collectedBy.length %> users</p>
        <a href="/stories/<%- item._id %>/create-story"><img src="" alt="heart button image"></a>
    </div>
    <% if(item.stories.length !== 0) { %>  
        <div class="item-page-stories-container">
            <% item.stories.forEach(story => { %>
                <p>By user <a href="/profile/<%- story.createdBy._id %>"><%- story.createdBy.username %></a></p>
                <p><%- story.text %></p>
            <% }) %> 
        </div> 
    <% } else { %> 
        <p>No stories here yet.</p>
    <% } %> 
</div>