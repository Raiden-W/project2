<div class="d-flex align-items-center justify-content-center mt-5 w-100">
    <div class="box box-lg">
        <div class="box-title text-center">Add a story about <%- item.name %></div>
        <div class="text-center my-3">  
            <img src="<%- item.imgUrl %>" alt="<%- item.name %> image" width="200px" class="rounded border">
        </div>
        <form method="post" action="create-story">
            <label class="my-2 text-secondary">Story</label>
            <input type="text" class="form-control form-control-lg" name="text" placeholder="Tell us your story...">
            <div class="mt-3 text-end">
                <button type="submit" id="create-story-btn" class="btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#create-story-modal">
                    Share your story!
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal - Be ready to unfold it. It is super bulky.-->
<div class="modal fade" id="create-story-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                You have successfully created a story about <%- item.name  %>
            </div>
            <div class="modal-footer">
                <a href="/profile/#<%- item.name %>">
                    <button type="button" class="btn btn-primary">Check your story in profile!</button>
                </a>
            </div>
        </div>
    </div>
</div>


