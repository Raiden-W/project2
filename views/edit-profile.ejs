<form action="/profile/edit" method="POST" enctype="multipart/form-data">
    <img src="<%- profile.picUrl %>" alt="Profile Picture" width="150px">
    <label>Choose a profile picture to upload:
        <input type="file" name="pic" accept="image/png, image/jpeg">
    </label>
    <label>Date of birth:<input type="date" name="birth" value="<%- profile.birth %>"></label>
    <label>Introduction:<input name="intro" value="<%- profile.intro %>"></label>
    
    <button type="submit">Save Profile</button>    
</form>